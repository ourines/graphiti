# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=localhost
MCP_TRANSPORT=stdio

# Graphiti FastAPI Backend
GRAPHITI_API_URL=http://localhost:8000

# API Headers (JSON format or Key:Value format)
# JSON format:
# GRAPHITI_API_HEADERS={"Authorization":"Bearer YOUR_TOKEN","X-Custom-Header":"value"}
#
# Simple format:
# GRAPHITI_API_HEADERS=Authorization:Bearer YOUR_TOKEN,X-Custom-Header:value

# Default Group ID (optional)
GRAPHITI_DEFAULT_GROUP_ID=default

# Logging
LOG_LEVEL=info

# Timeout (ms)
GRAPHITI_REQUEST_TIMEOUT=30000

# ===========================================
# Authentication Configuration (MCP Standard)
# ===========================================

# Enable authentication (set to 'true' for public deployment)
MCP_AUTH_ENABLED=false

# Authentication method: 'bearer' (OAuth 2.1 Bearer Token) or 'apikey' (Simple API Key)
MCP_AUTH_METHOD=bearer

# Bearer Token Authentication (recommended for production)
# Generate a secure token: openssl rand -hex 32
MCP_AUTH_BEARER_TOKEN=your-secure-bearer-token-here

# API Key Authentication (simpler, less secure)
# Generate a secure key: openssl rand -hex 32
MCP_AUTH_API_KEY=your-secure-api-key-here

# Public endpoints (comma-separated, no auth required)
# Example: /health,/status,/metrics
MCP_AUTH_PUBLIC_ENDPOINTS=/health,/status

