# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=localhost
MCP_TRANSPORT=stdio

# Graphiti FastAPI Backend
GRAPHITI_API_URL=http://localhost:8000

# ===========================================
# API Authentication Headers
# 如果 graphiti-api 启用了认证，需要配置认证信息
# ===========================================

# Bearer Token 认证方式（推荐）
# GRAPHITI_API_HEADERS={"Authorization":"Bearer your-secure-bearer-token"}

# 或使用 API Key 认证方式
# GRAPHITI_API_HEADERS={"X-API-Key":"your-secure-api-key"}

# 或简化格式
# GRAPHITI_API_HEADERS=Authorization:Bearer your-secure-bearer-token

# Default Group ID (optional)
GRAPHITI_DEFAULT_GROUP_ID=default

# Logging
LOG_LEVEL=info

# Timeout (ms)
GRAPHITI_REQUEST_TIMEOUT=30000

# ===========================================
# 公网部署配置示例
# ===========================================
#
# 如果你的 graphiti-api 部署在公网，需要：
#
# 1. 设置远程 API 地址:
#    GRAPHITI_API_URL=https://your-domain.com
#
# 2. 配置认证 header（与 graphiti-api 的 API_AUTH_BEARER_TOKEN 一致）:
#    GRAPHITI_API_HEADERS={"Authorization":"Bearer your-secure-bearer-token"}
#
# 3. 使用 HTTPS（不要用 HTTP）
#
# 完整示例:
# GRAPHITI_API_URL=https://api.example.com
# GRAPHITI_API_HEADERS={"Authorization":"Bearer abc123def456..."}
# LOG_LEVEL=info
#


